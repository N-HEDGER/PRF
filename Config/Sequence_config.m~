% Sequence config
% Here we define the sequence of events that take place during a trial.



% Draw random values from a exponential distribution
vec=zeros(1,1000);
for i=1:1000
    vec(i)=exprnd(const.expM);
end


% Impose a minimum value of 2 and a maximum value of 8.
mask = vec>const.expl & vec<const.exph;
intervals=vec(mask);



% Here we begin a sequence.
 fix_sequence(1)=0;
 i=1;
 endtime=0;
while endtime<const.h_period;
    i=i+1;
   fix_sequence(i)=(fix_sequence(i-1)+randsample(intervals,1));
   endtime=fix_sequence(end);
end

% Make this the same length as the number of draws.

const.totaldrawsh=240;

time_sequence=linspace(0,const.h_period,const.totaldrawsh);

binary_fix_sequence=zeros(1,const.totaldrawsh);

binary_fix_sequence(time_sequence<1)=0;
binary_fix_sequence(time_sequence>fix_sequence(1) & time_sequence<fix_sequence(2))=1;
binary_fix_sequence(time_sequence>fix_sequence(2) & time_sequence<fix_sequence(3))=0;
binary_fix_sequence(time_sequence>fix_sequence(3) & time_sequence<fix_sequence(4))=1;

